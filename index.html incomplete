    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const uploadArea = document.getElementById('upload-area');
            const fileInput = document.getElementById('file-input');
            const browseBtn = document.getElementById('browse-btn');
            const m3uUrlInput = document.getElementById('m3u-url');
            const loadUrlBtn = document.getElementById('load-url-btn');
            const statusMessage = document.getElementById('status-message');
            const playlistControls = document.getElementById('playlist-controls');
            const playlistName = document.getElementById('playlist-name');
            const channelCount = document.getElementById('channel-count');
            const groupCount = document.getElementById('group-count');
            const channelList = document.getElementById('channel-list');
            const channelSearch = document.getElementById('channel-search');
            const clearPlaylistBtn = document.getElementById('clear-playlist');
            
            const videoPlayer = document.getElementById('video-player');
            const playBtn = document.getElementById('play-btn');
            const pauseBtn = document.getElementById('pause-btn');
            const muteBtn = document.getElementById('mute-btn');
            const fullscreenBtn = document.getElementById('fullscreen-btn');
            const volumeDownBtn = document.getElementById('volume-down');
            const volumeUpBtn = document.getElementById('volume-up');
            const nowPlaying = document.getElementById('now-playing');
            const playerStatus = document.getElementById('player-status');
            
            // State
            let channels = [];
            let currentChannel = null;
            let filteredChannels = [];
            
            // Event Listeners
            browseBtn.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            uploadArea.addEventListener('dragover', handleDragOver);
            uploadArea.addEventListener('drop', handleFileDrop);
            loadUrlBtn.addEventListener('click', loadFromUrl);
            clearPlaylistBtn.addEventListener('click', clearPlaylist);
            channelSearch.addEventListener('input', filterChannels);
            
            playBtn.addEventListener('click', () => {
                videoPlayer.play().catch(e => {
                    showStatus('Error playing video: ' + e.message, 'error');
                });
            });
            pauseBtn.addEventListener('click', () => videoPlayer.pause());
            muteBtn.addEventListener('click', toggleMute);
            fullscreenBtn.addEventListener('click', toggleFullscreen);
            volumeDownBtn.addEventListener('click', () => adjustVolume(-0.1));
            volumeUpBtn.addEventListener('click', () => adjustVolume(0.1));
            
            videoPlayer.addEventListener('loadstart', () => {
                playerStatus.textContent = 'Loading stream...';
                playerStatus.className = 'status-info';
            });
            
            videoPlayer.addEventListener('canplay', () => {
                playerStatus.textContent = 'Ready to play';
                playerStatus.className = 'status-success';
            });
            
            videoPlayer.addEventListener('error', (e) => {
                playerStatus.textContent = 'Error loading stream';
                playerStatus.className = 'status-error';
                console.error('Video error:', e);
            });
            
            videoPlayer.addEventListener('waiting', () => {
                playerStatus.textContent = 'Buffering...';
                playerStatus.className = 'status-info';
            });
            
            videoPlayer.addEventListener('playing', () => {
                playerStatus.textContent = 'Playing';
                playerStatus.className = 'status-success';
            });
            
            // Functions
            function handleDragOver(e) {
                e.preventDefault();
                e.stopPropagation();
                uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.6)';
                uploadArea.style.background = 'rgba(255, 255, 255, 0.05)';
            }
            
            function handleFileDrop(e) {
                e.preventDefault();
                e.stopPropagation();
                uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.3)';
                uploadArea.style.background = 'transparent';
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    processFile(files[0]);
                }
            }
            
            function handleFileSelect(e) {
                const files = e.target.files;
                if (files.length > 0) {
                    processFile(files[0]);
                }
            }
            
            function loadFromUrl() {
                const url = m3uUrlInput.value.trim();
                if (!url) {
                    showStatus('Please enter a valid URL', 'error');
                    return;
                }
                
                showStatus('Loading playlist from URL...', 'info');
                loadUrlBtn.innerHTML = '<div class="loading"></div> Loading...';
                loadUrlBtn.disabled = true;
                
                fetch(url)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.text();
                    })
                    .then(data => {
                        parseM3U(data);
                        playlistName.textContent = 'URL Playlist';
                        showStatus('Playlist loaded successfully!', 'success');
                        playlistControls.classList.remove('hidden');
                        m3uUrlInput.value = '';
                    })
                    .catch(error => {
                        console.error('Error loading M3U from URL:', error);
                        showStatus('Error loading playlist: ' + error.message, 'error');
                    })
                    .finally(() => {
                        loadUrlBtn.innerHTML = '<i>🔗</i> Load from URL';
                        loadUrlBtn.disabled = false;
                    });
            }
            
            function processFile(file) {
                if (!file.name.toLowerCase().endsWith('.m3u') && !file.name.toLowerCase().endsWith('.m3u8')) {
                    showStatus('Please select a valid .m3u or .m3u8 file', 'error');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        parseM3U(e.target.result);
                        playlistName.textContent = file.name;
                        showStatus('Playlist loaded successfully!', 'success');
                        playlistControls.classList.remove('hidden');
                    } catch (error) {
                        console.error('Error parsing M3U file:', error);
                        showStatus('Error parsing M3U file. Please check the format.', 'error');
                    }
                };
                reader.readAsText(file);
            }
            
            function parseM3U(content) {
                channels = [];
                const lines = content.split('\n');
                let currentChannel = {};
                let groups = new Set();
                
                for (let i = 0; i < lines.length; i++) {
                    const line = lines[i].trim();
                    
                    if (line.startsWith('#EXTINF:')) {
                        // Parse channel info
                        const info = line.substring(8).split(',');
                        const params = info[0].split(' ');
                        const name = info.slice(1).join(',').trim();
                        
                        currentChannel = {
                            name: name,
                            url: '',
                            tvg: {
                                id: '',
                                name: '',
                                logo: '',
                                group: ''
                            }
                        };
                        
                        // Parse parameters
                        for (let j = 0; j < params.length; j++) {
                            const param = params[j];
                            if (param.includes('tvg-id=')) {
                                currentChannel.tvg.id = param.split('=')[1].replace(/"/g, '');
                            } else if (param.includes('tvg-name=')) {
                                currentChannel.tvg.name = param.split('=')[1].replace(/"/g, '');
                            } else if (param.includes('tvg-logo=')) {
                                currentChannel.tvg.logo = param.split('=')[1].replace(/"/g, '');
                            } else if (param.includes('group-title=')) {
                                currentChannel.tvg.group = param.split('=')[1].replace(/"/g, '');
                                groups.add(currentChannel.tvg.group);
                            }
                        }
                    } else if (line && !line.startsWith('#') && currentChannel.name) {
                        // This is the URL line
                        currentChannel.url = line;
                        channels.push(currentChannel);
                        currentChannel = {};
                    }
                }
                
                updateChannelList();
                channelCount.textContent = channels.length;
                groupCount.textContent = groups.size;
                filteredChannels = [...channels];
            }
            
            function filterChannels() {
                const searchTerm = channelSearch.value.toLowerCase();
                if (!searchTerm) {
                    filteredChannels = [...channels];
                } else {
                    filteredChannels = channels.filter(channel => 
                        channel.name.toLowerCase().includes(searchTerm) ||
                        (channel.tvg.group && channel.tvg.group.toLowerCase().includes(searchTerm))
                    );
                }
                updateChannelList();
            }
            
            function updateChannelList() {
                channelList.innerHTML = '';
                
                if (filteredChannels.length === 0) {
                    channelList.innerHTML = '<p class="channel-placeholder">No channels found</p>';
                    return;
                }
                
                filteredChannels.forEach((channel, index) => {
                    const channelItem = document.createElement('div');
                    channelItem.className = 'channel-item';
                    
                    const logoContent = channel.tvg.logo ? 
                        `<img src="${channel.tvg.logo}" alt="${channel.name}" class="channel-logo" onerror="this.style.display='none'">` :
                        `<div class="channel-logo">${channel.name.charAt(0)}</div>`;
                    
                    channelItem.innerHTML = `
                        ${logoContent}
                        <div class="channel-info">
                            <div class="channel-name">${channel.name}</div>
                            ${channel.tvg.group ? `<div class="channel-group">${channel.tvg.group}</div>` : ''}
                        </div>
                    `;
                    
                    channelItem.addEventListener('click', () => playChannel(channel, index));
                    channelList.appendChild(channelItem);
                });
            }
            
            function playChannel(channel, index) {
                // Remove active class from all channels
                document.querySelectorAll('.channel-item').forEach(item => {
                    item.classList.remove('active');
                });
                
                // Add active class to selected channel
                const channelItems = document.querySelectorAll('.channel-item');
                if (channelItems[index]) {
                    channelItems[index].classList.add('active');
                }
                
                currentChannel = channel;
                nowPlaying.textContent = channel.name;
                
                // Try to play the channel
                videoPlayer.src = channel.url;
                videoPlayer.load();
                
                showStatus(`Loading: ${channel.name}`, 'info');
                
                videoPlayer.addEventListener('loadeddata', function() {
                    showStatus(`Now playing: ${channel.name}`, 'success');
                }, { once: true });
            }
            
            function clearPlaylist() {
                channels = [];
                filteredChannels = [];
                currentChannel = null;
                videoPlayer.src = '';
                nowPlaying.textContent = 'No channel selected';
                playerStatus.textContent = 'Ready to play';
                playerStatus.className = 'status-info';
                playlistControls.classList.add('hidden');
                channelSearch.value = '';
                updateChannelList();
                showStatus('Playlist cleared', 'success');
            }
            
            function showStatus(message, type) {
                statusMessage.textContent = message;
                statusMessage.className = 'status-message';
                
                if (type === 'success') {
                    statusMessage.classList.add('status-success');
                } else if (type === 'error') {
                    statusMessage.classList.add('status-error');
                } else {
                    statusMessage.classList.add('status-info');
                }
                
                statusMessage.classList.remove('hidden');
                
                // Auto-hide after 5 seconds
                setTimeout(() => {
                    statusMessage.classList.add('hidden');
                }, 5000);
            }
            
            function toggleMute() {
                videoPlayer.muted = !videoPlayer.muted;
                muteBtn.innerHTML = videoPlayer.muted ? '<i>🔇</i> Unmute' : '<i>🔊</i> Mute';
            }
            
            function adjustVolume(change) {
                videoPlayer.volume = Math.min(1, Math.max(0, videoPlayer.volume + change));
            }
            
            function toggleFullscreen() {
                if (!document.fullscreenElement) {
                    if (videoPlayer.requestFullscreen) {
                        videoPlayer.requestFullscreen();
                    } else if (videoPlayer.mozRequestFullScreen) {
                        videoPlayer.mozRequestFullScreen();
                    } else if (videoPlayer.webkitRequestFullscreen) {
                        videoPlayer.webkitRequestFullscreen();
                    } else if (videoPlayer.msRequestFullscreen) {
                        videoPlayer.msRequestFullscreen();
                    }
                } else {
                    if (document.exitFullscreen) {
                        document.exitFullscreen();
                    } else if (document.mozCancelFullScreen) {
                        document.mozCancelFullScreen();
                    } else if (document.webkitExitFullscreen) {
                        document.webkitExitFullscreen();
                    } else if (document.msExitFullscreen) {
                        document.msExitFullscreen();
                    }
                }
            }
            
            // Initialize with a sample message
            showStatus('Welcome to Srivya Web TV! Upload an M3U file or enter a URL to get started!', 'info');
        });
    </script>
</body>
</html>
